<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040749"
    tools:context=".ArrangeResult">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="288dp"
        android:background="#FBFCFD"
        android:shadowColor="#FFFFFF"
        android:textColor="#0C0101"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nicView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <TextView
        android:id="@+id/addressView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nicView" />

    <TextView
        android:id="@+id/conView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressView" />

    <TextView
        android:id="@+id/mailView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conView" />

    <TextView
        android:id="@+id/jobView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailView" />

    <TextView
        android:id="@+id/incomeView"
        android:layout_width="365dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#FBFCFD"
        android:textColor="#0C0101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobView" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:onClick="onClickNext"
        android:text="@string/ARbtn3"
        app:backgroundTint="#0F80DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incomeView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="340dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toTopOf="@+id/nameView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.826"
        app:srcCompat="@drawable/car55" />

</androidx.constraintlayout.widget.ConstraintLayout>